{port_specs, [{"priv/ip_index_nif.so", ["c_src/*.cpp", "c_src/*.c"]}]}.
{eunit_opts, [verbose]}.

{plugins, [pc, rebar3_proper]}.

{provider_hooks, [
  {post, [
    {compile, {pc, compile}},
    {clean, {pc, clean}}
  ]}
]}.

{port_env, [{"LDFLAGS", "$LDFLAGS -lstdc++"},
            {"CFLAGS", "$CFLAGS -Wall -Wextra -pedantic -O2 -std=gnu11 -ggdb"},
            {"CXXFLAGS", "$CXXFLAGS -Wall -Wextra -Wold-style-cast -pedantic -std=gnu++11 -O2 -ggdb"}]}.

{deps, [{proper, ".*", {git, "https://github.com/manopapad/proper.git", {tag, "v1.2"}}}]}.

{erl_opts, [
  warn_export_all,
  warn_export_vars,
  warn_missing_spec,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_untyped_record,
  warn_unused_import,
  warn_unused_vars
]}.

{xref_checks, [
  deprecated_functions,
  deprecated_function_calls,
  locals_not_used,
  undefined_functions,
  undefined_function_calls
]}.
